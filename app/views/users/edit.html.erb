<DOCTYPE! html>
<html>
    <head>
       <title>User Management</title>
    </head>
    <body>
        <form action='/users/<%= @user.id %>' method='post'>
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="hidden" name="_method" value="patch">
            <p>First Name: <input type="text" value="<%= @user.first_name %>" name="form[first_name]"></p>
            <p>Last Name: <input type="text" value="<%= @user.last_name %>" name="form[last_name]"></p>
            <p>Email Address: <input type="text" value="<%= @user.email_address %>" name="form[email_address]"></p>
            <p>Password: <input type="password" value="<%= @user.password %>" name="form[password]"></p>
            <input type='submit' name='update' value='Update'/>
        </form>
        <a href="/users/<%= @user.id %>" data-method='get'>Show</a>
        <a href="/back">Back</a>
    </body>
</html>
